<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Pacientes' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-hospital me-2"></i>AppSalud
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-home me-1"></i>Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/pacientes"><i class="fas fa-users me-1"></i>Pacientes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/basculas"><i class="fas fa-weight me-1"></i>Básculas</a></li>
                    <li class="nav-item"><a class="nav-link" href="/temperaturas"><i class="fas fa-thermometer-half me-1"></i>Temperaturas</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= usuario ? usuario.username : 'Usuario' %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row justify-content-center mt-4">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-user me-2"></i>
                            <%= paciente ? 'Editar Paciente' : 'Nuevo Paciente' %>
                        </h3>
                    </div>
                    <div class="card-body">
                    <form id="pacienteForm" 
                          action="<%= paciente ? '/pacientes/api/' + paciente.id : '/pacientes/api' %>" 
                          method="<%= paciente ? 'PUT' : 'POST' %>">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="nombre" class="form-label required">
                                    <i class="fas fa-id-card me-1"></i>Nombre *
                                </label>
                                <input type="text" class="form-control" id="nombre" name="nombre" 
                                       value="<%= paciente ? paciente.nombre : '' %>" 
                                       required 
                                       placeholder="Ej: Juan">
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="apellido" class="form-label required">
                                    <i class="fas fa-id-card me-1"></i>Apellido *
                                </label>
                                <input type="text" class="form-control" id="apellido" name="apellido" 
                                       value="<%= paciente ? paciente.apellido : '' %>" 
                                       required 
                                       placeholder="Ej: Pérez">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fecha_nacimiento" class="form-label required">
                                    <i class="fas fa-birthday-cake me-1"></i>Fecha de Nacimiento *
                                </label>
                                <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" 
                                       value="<%= paciente && paciente.fecha_nacimiento ? paciente.fecha_nacimiento.toISOString().split('T')[0] : '' %>" 
                                       required>
                                <div class="form-text">Formato: DD/MM/AAAA</div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label required">
                                    <i class="fas fa-venus-mars me-1"></i>Sexo *
                                </label>
                                <div class="d-flex gap-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="sexo" id="sexoM" 
                                               value="M" <%= (paciente && paciente.sexo === 'M') ? 'checked' : '' %> required>
                                        <label class="form-check-label" for="sexoM">
                                            <i class="fas fa-mars me-1"></i>Masculino
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="sexo" id="sexoF" 
                                               value="F" <%= (paciente && paciente.sexo === 'F') ? 'checked' : '' %>>
                                        <label class="form-check-label" for="sexoF">
                                            <i class="fas fa-venus me-1"></i>Femenino
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Campos adicionales (opcionales) -->
                        <div class="mb-3">
                            <label for="telefono" class="form-label">
                                <i class="fas fa-phone me-1"></i>Teléfono
                            </label>
                            <input type="tel" class="form-control" id="telefono" name="telefono" 
                                   value="<%= paciente ? paciente.telefono || '' : '' %>" 
                                   placeholder="Ej: 612345678">
                        </div>
                        
                        <div class="mb-3">
                            <label for="direccion" class="form-label">
                                <i class="fas fa-home me-1"></i>Dirección
                            </label>
                            <textarea class="form-control" id="direccion" name="direccion" 
                                      rows="2" 
                                      placeholder="Ej: Calle Principal 123, Ciudad"><%= paciente ? paciente.direccion || '' : '' %></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>Email
                            </label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="<%= paciente ? paciente.email || '' : '' %>" 
                                   placeholder="Ej: paciente@email.com">
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="/pacientes" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                <%= paciente ? 'Actualizar' : 'Guardar' %>
                            </button>
                        </div>
                    </form>
                </div>
                    </div>
                    
                    <% if (paciente) { %>
                        <div class="card-footer bg-light">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                ID: <%= paciente.id %> | 
                                Creado: <%= new Date(paciente.creado_en).toLocaleDateString('es-ES') %>
                            </small>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Incluir el JS específico de pacientes -->
    <script src="/js/pacientes.js"></script>

    <style>
        .required::after {
            content: " *";
            color: #dc3545;
        }
        
        .form-check-input:checked {
            background-color: #007bff;
            border-color: #007bff;
        }
        
        .form-check-label {
            cursor: pointer;
        }
        
        textarea.form-control {
            resize: vertical;
            min-height: 80px;
        }
    </style>
</body>
</html>